<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Text?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <center>
      <SplitPane dividerPositions="0.5" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" orientation="VERTICAL" prefHeight="600.0" prefWidth="800.0">
        <items>
            <BorderPane>
               <center>
                  <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" BorderPane.alignment="CENTER">
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                     <BorderPane.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </BorderPane.margin>
                  </MediaView>
               </center>
            </BorderPane>
            <ScrollPane />
        </items>
      </SplitPane>
   </center>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button mnemonicParsing="false" text="Button" />
            <Text fx:id="videoTime" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER" />
        </items>
      </ToolBar>
   </bottom>
</BorderPane>
